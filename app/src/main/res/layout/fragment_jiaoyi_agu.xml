                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:text="-203205.00"
                        android:textColor="@color/text_blue"
                        android:textSize="18sp"/>

                    <TextView

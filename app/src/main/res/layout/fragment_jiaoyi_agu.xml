                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center|left"
                                android:text="+1300.8"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <View
